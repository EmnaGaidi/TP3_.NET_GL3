@{
}
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Person By ID</title>
  </head>
  <body>
    @if(Model == null){
        <h2>This ID is NOT VALID</h2>
    }
    else
    {

       <div class="container">
        <div class="row">
               <div class="col-sm">
           ID
             </div>
             <div class="col-sm">
          First Name
             </div>
             <div class="col-sm">
          Last Name
             </div>
             <div class="col-sm">
          Email
             </div>
             <div class="col-sm">
           Country
             </div>
             <div class="col-sm">
           Image
             </div>
          </div>
              <div class="row">
                   <div class="col-sm">
               @Model.id
                 </div>
                 <div class="col-sm">
              @Model.first_name
                 </div>
                 <div class="col-sm">
              @Model.last_name
                 </div>
                 <div class="col-sm">
              @Model.email
                 </div>
                 <div class="col-sm">
              @Model.country
                 </div>
                 <div class="col-sm">
              @Model.image
                 </div>
              </div>

          </div>
   
    
    
    
    
    
    
    
    
    
    }

    </body>
</html>